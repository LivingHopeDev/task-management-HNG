

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum status {
  pending
  in_progress
  completed
}

enum priority {
  low
  medium
  high
}
model User {
    id                       String     @id @unique @default(uuid())
    username                 String?
    email                    String     @unique
    password                 String
    createdAt                DateTime   @default(now())
    updatedAt                DateTime   @updatedAt
    otp                      Otp[]
    createdBy                Task[]

    @@map("users")
}

model Otp {
    id     String   @id @unique @default(uuid())
    token  String
    expiry DateTime
    userId String
    user   User     @relation(fields: [userId], references: [id])
}

model Task {
  id                  String @id @unique @default(uuid())
  title               String
  description         String 
  dueDate             DateTime
  status              status @default(pending)
  priority            priority
  userId              String
  createdBy User @relation( fields: [userId],references: [id])
  assignedTo          String[]
  tags                String[]
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
}